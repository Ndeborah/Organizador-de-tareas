<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Otorgamiento permisos -->

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Organizador"
        tools:targetApi="31">
        <activity
            android:name=".CrearTareaActivity"
            android:exported="false"
            android:label="@string/title_activity_crear_tarea"
            android:theme="@style/Theme.Organizador" />
        <activity
            android:name=".GrupoActivity"
            android:exported="false"
            android:label="@string/title_activity_grupo"
            android:theme="@style/Theme.Organizador" />
        <activity
            android:name=".CrearGrupoActivity"
            android:exported="false"
            android:label="@string/title_activity_crear_grupo"
            android:theme="@style/Theme.Organizador" />
        <activity
            android:name=".ChatDeGrupoActivity"
            android:exported="false"
            android:label="@string/title_activity_chat"
            android:theme="@style/Theme.Organizador" />
        <activity
            android:name=".TareasDeGrupoActivity"
            android:exported="false"
            android:label="@string/title_activity_main2"
            android:theme="@style/Theme.Organizador" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Organizador">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>